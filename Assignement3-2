import java.util.Scanner; //brings in the scanner function

public class Java_Assignment {
    public static void main(String[] args) {
        System.out.println("Please enter your weight in pounds: ");
        //creates new scanner called userinput
        Scanner userinput = new Scanner(System.in);
        double weight = userinput.nextDouble(); //holds the weight
        System.out.println("Please enter your height in feet then inches. Feet: ");
        double height = userinput.nextDouble(); //Holds the feet
        System.out.println("Inches: ");
        double inches = userinput.nextDouble(); //holds the inches
        userinput.close(); //closes the scanner once its no longer needed

        //converting height to meters squared and pounds to kilograms
        height = (height*12) + inches; //converts the feet to inches
        height *= 0.0254; //converts the inches to meters
        height *= height;
        weight /= 2.205; //converts pounds to kilograms

        //getting BMI
        double bmi = (weight/height);

        //Printing the correct BMI
        System.out.println("Your BMI is: "+bmi);
        if(bmi >= 30){
            System.out.println("Your status is Obese");
        } else if (bmi < 30 && bmi > 25) {
            System.out.println("Your status is Overweight");
        } else if (bmi <= 25 && bmi >= 18.5) {
            System.out.println("Your status is Normal");
        } else if (bmi < 18.5) {
            System.out.println("Your status is Underweight");
        }
    }
}
