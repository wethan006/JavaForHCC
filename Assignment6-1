import java.util.Scanner; //brings in the scanner utility

public class Java_Assignment {
    public static int sumDigits(long n){ //method for adding all of the digits
        int sum = 0; //creates the sum total int
        boolean zero = true; //creates a true or false statement for while loop
        while(zero){ //loop for extracting the numbers
            long extracted = n % 10; //extracts a digit from the number
            sum = (sum+(int)extracted); //adds the extracted number to the sum
            n = n/10;
            if(n == 0) { //checks to see if the number is 0
                zero = false; //will end the loop for extracting numbers
            }
        }
        return sum; // will return the sum of the digits
    }
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in); //creates new scanner called input
        System.out.println("Please enter a number to get the sum of its digits: ");
        long number = input.nextLong(); //grabs the needed number
        input.close(); //closes the scanner now that its not needed
        int total = sumDigits(number); //calls the method to get the sum
        System.out.println("The digit sum of " + number + " is: " + total); //prints the output
    }
}
